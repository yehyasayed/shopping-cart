<div class="container">
    <div class="row">
        <h1 class="text-center col-12 mt-5 mb-3">Add Admin</h1>
        <div class="m-auto text-center">
            <ul class="errors">
                {{#each massages as |massage|}}
                <div class="alert alert-danger" role="alert">{{massage}}</div>
                {{/each}}
            </ul>
        </div>
        <div class="col-12">
            <div class="col-lg-4 col-md-6 col-12 offset-lg-4 offset-md-3">
                <form method="POST" action="/users/add-admin">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Confirm Password</label>
                        <input type="password" class="form-control" name="confirm">
                    </div>
                    <input type="hidden" name="_csrf" value="{{token}}">
                    <div class="m-auto text-center">
                        <button type="submit" class="btn btn-primary pt-3 pb-3 pr-4 pl-4">Add Admin</button>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</div>